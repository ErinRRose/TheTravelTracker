<h1>All Destinations</h1>

<% @destinations.each do |d| %>
    <h2><%= d.name %></h2>
    <a href="<%= destination_path(d.id) %>"><i class='fa fa-location-arrow'></i></a>
    <br>
    <a href="<%= new_destination_rating_path(d.id) %>"><i class='fa fa-star'></i></a>
    <div>
        <p><%= d.description %></p>
    </div>
<% end %>